@import '../ui/Theme.styl';

.container {
  padding: 1.2rem 0;
}

.image {
  width: 500px;
  height: 300px;
  border: solid 1px t_lightgray;
  border-radius: 6px;
  overflow: hidden;
  flex: 0 0 auto;
  margin-right: 1rem;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.card {
  padding: 1rem;
}

.name {
  color: t_secondary;
}

.right {
  padding: 0 0.5rem;
  display: flex;
}

.buttons {
  display: flex;
  align-items: center;
}