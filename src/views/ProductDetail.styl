@import '../ui/Theme.styl';

.image {
  width: 100%;
  height: 100%;
  border: solid 1px t_lightgray;
  border-radius: 6px;
  overflow: hidden;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.card {
  padding: 1rem;
}

.name {
  color: t_secondary;
}

.rightGrid {
  grid-template-rows: auto min-content;
  gap: 0.5rem;
}

.buttons {
  display: flex;
  flex-wrap: wrap;

  > * {
    margin-bottom: 0.5rem;
  }
}

.grid {
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  justify-content: center;
  gap: 1rem;
}