@import '../ui/Theme.styl';

placeholderColor = t_gray;

.searchBar {
  height: 36px;
  padding: 0.3rem 0.5rem 0.3rem 0.6rem;
  border-radius: 6px;
  border: none;
  justify-self: center;
  box-shadow: inset 0 1px 5px rgba(0, 0, 0, 0.1);
  background-color: lighten(t_lightgray, 5);
  display: flex;
  align-items: center;
  width: 100%;
  border: solid 1px alpha(t_gray, 0.4)

  &:focus {
    outline: 0;
  }

  path {
    fill: placeholderColor;
  }

  input {
    background-color: transparent;
    border: none;
    color: t_secondary;
    margin-left: 0.3rem;
    width: 100%;

    &::placeholder {
      color: placeholderColor;
    }

    &:focus {
      outline: none;
    }
  }
}