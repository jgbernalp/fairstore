{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
